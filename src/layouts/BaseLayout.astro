---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = "Dr. Will Faithfull â€” Founder & CEO of ExaDev. Engineer, builder, startup accelerator.", image = "/banner.jpg" } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:creator" content="@DrFaithfull" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, Astro.site)} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />

    <!-- KaTeX -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" />
  </head>
  <body class="min-h-screen flex flex-col">
    <nav class="border-b border-[var(--color-border)] sticky top-0 z-50 bg-[var(--color-bg)]/95 backdrop-blur-sm">
      <div class="max-w-3xl mx-auto px-6 py-4 flex items-center justify-between">
        <a href="/" class="text-[var(--color-text-heading)] font-bold text-lg tracking-tight hover:text-[var(--color-accent)] transition-colors">
          Will Faithfull
        </a>
        <div class="flex items-center gap-6 text-sm">
          <a href="/about" class="text-[var(--color-text-muted)] hover:text-[var(--color-text-heading)] transition-colors">About</a>
          <a href="/blog" class="text-[var(--color-text-muted)] hover:text-[var(--color-text-heading)] transition-colors">Blog</a>
          <a href="/cv" class="text-[var(--color-text-muted)] hover:text-[var(--color-text-heading)] transition-colors">CV</a>
        </div>
      </div>
    </nav>

    <main class="flex-1">
      <slot />
    </main>

    <footer class="border-t border-[var(--color-border)] mt-24">
      <div class="max-w-3xl mx-auto px-6 py-8 flex flex-col sm:flex-row items-center justify-between gap-4 text-sm text-[var(--color-text-muted)]">
        <div>&copy; {new Date().getFullYear()} Dr. Will Faithfull</div>
        <div class="flex items-center gap-5">
          <a href="https://www.linkedin.com/in/will-faithfull/" class="hover:text-[var(--color-text-heading)] transition-colors" aria-label="LinkedIn">
