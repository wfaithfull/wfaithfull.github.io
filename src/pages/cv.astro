        {experience.map((employer) => (
          <div class="border-l-2 border-[var(--color-border)] pl-6">
            <div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between gap-1 mb-4">
              <h3 class="text-lg font-bold text-[var(--color-text-heading)]">
                {employer.url ? (
                  <a href={employer.url} class="hover:text-[var(--color-accent)] transition-colors">{employer.company}</a>
                ) : (
                  employer.company
                )}
                {employer.note && (
                  <span class="text-sm font-normal text-[var(--color-text-muted)]"> · {employer.note}</span>
                )}
              </h3>
              <span class="text-sm font-mono text-[var(--color-text-muted)] shrink-0">{employer.duration}</span>
            </div>
            <div class="flex flex-col gap-6">
              {employer.roles.map((role) => (
                <div>
                  <div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between gap-1">
                    <h4 class="font-semibold text-[var(--color-text-heading)]">
                      {role.title}
                      {role.note && (
                        <span class="text-sm font-normal text-[var(--color-text-muted)]"> · {role.note}</span>
                      )}
                    </h4>
                    <span class="text-sm font-mono text-[var(--color-text-muted)] shrink-0">{role.period}</span>
                  </div>
                  <p class="text-sm text-[var(--color-text-muted)] mb-1">{role.location}</p>
                  {role.description && (
                    <p class="text-[var(--color-text)] mt-2 leading-relaxed">{role.description}</p>
                  )}
                  {role.url && (
                    <a href={role.url} class="text-sm text-[var(--color-accent)] hover:text-[var(--color-accent-hover)] transition-colors mt-1 inline-block">{role.url}</a>
                  )}
                  {role.tech && (
                    <div class="flex flex-wrap gap-2 mt-3">
                      {role.tech.map((t) => (
                        <span class="text-xs font-mono px-2 py-0.5 rounded bg-[var(--color-bg-surface)] text-[var(--color-text-muted)] border border-[var(--color-border)]">{t}</span>
                      ))}
                    </div>
                  )}
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Education -->
    <section class="mb-16">
      <h2 class="text-sm font-mono text-[var(--color-accent)] tracking-wide uppercase mb-8">Education</h2>
      <div class="flex flex-col gap-6">
        {education.map((edu) => (
          <div class="border-l-2 border-[var(--color-border)] pl-6">
            <div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between gap-1">
              <h3 class="text-lg font-bold text-[var(--color-text-heading)]">{edu.institution}</h3>
              <span class="text-sm font-mono text-[var(--color-text-muted)] shrink-0">{edu.period}</span>
            </div>
            <p class="text-[var(--color-text)]">{edu.degree}</p>
            {edu.note && (
              <p class="text-sm text-[var(--color-text-muted)] mt-1">{edu.note}</p>
            )}
