      <div class="flex flex-col gap-4">
        {publications.map((pub) => (
          <div class="border-l-2 border-[var(--color-border)] pl-6">
            <div class="flex items-baseline justify-between gap-4">
              <p class="font-semibold text-[var(--color-text-heading)]">{pub.title}</p>
              <span class="text-sm font-mono text-[var(--color-text-muted)] shrink-0">{pub.year}</span>
            </div>
            <p class="text-sm text-[var(--color-text-muted)]">{pub.authors}</p>
            <p class="text-sm text-[var(--color-text-muted)]">{pub.venue}</p>
            <p class="text-xs font-mono text-[var(--color-text-muted)] mt-1">Cited by {pub.citations}</p>
          </div>
        ))}
      </div>
      <p class="text-sm text-[var(--color-text-muted)] mt-6 pl-6">
        <a href="https://scholar.google.com/citations?user=ZMxZ2W0AAAAJ&hl=en" class="text-[var(--color-accent)] hover:text-[var(--color-accent-hover)] transition-colors">View on Google Scholar</a>
      </p>
    </section>

    <!-- Awards -->
    <section>
