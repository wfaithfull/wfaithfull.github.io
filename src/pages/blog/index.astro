---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric' });
}

const postsByYear = posts.reduce((acc, post) => {
  const year = post.data.date.getFullYear();
  if (!acc.has(year)) acc.set(year, []);
  acc.get(year)!.push(post);
  return acc;
}, new Map<number, typeof posts>());
---

<BaseLayout title="Blog â€” Dr. Will Faithfull" description="Writing about software engineering, data science, startups, and the craft of building things.">
  <section class="max-w-3xl mx-auto px-6 py-16 sm:py-20">
    <h1 class="text-3xl sm:text-4xl font-extrabold tracking-tight text-[var(--color-text-heading)] mb-4">Blog</h1>
    <p class="text-[var(--color-text-muted)] mb-12">Writing about software engineering, data science, startups, and the craft of building things.</p>

    {[...postsByYear.entries()].map(([year, yearPosts]) => (
      <div class="mb-10">
        <h2 class="text-sm font-mono text-[var(--color-text-muted)] mb-4 tracking-wide">{year}</h2>
        <div class="flex flex-col gap-1">
          {yearPosts.map((post) => (
            <a href={`/blog/${post.id}`} class="group flex flex-col sm:flex-row sm:items-baseline gap-1 sm:gap-4 py-3 -mx-3 px-3 rounded-lg hover:bg-[var(--color-bg-surface)] transition-colors">
              <time class="text-sm text-[var(--color-text-muted)] font-mono shrink-0 tabular-nums">{formatDate(post.data.date)}</time>
              <div class="flex-1">
                <span class="text-[var(--color-text-heading)] group-hover:text-[var(--color-accent)] transition-colors font-medium">{post.data.title}</span>
                <div class="flex gap-2 mt-1">
                  {post.data.tags.map((tag: string) => (
                    <span class="text-xs font-mono text-[var(--color-text-muted)]">#{tag}</span>
                  ))}
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    ))}
  </section>
</BaseLayout>
